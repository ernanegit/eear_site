# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite por padrão, PostgreSQL para produção)
DATABASE_URL=sqlite:///db.sqlite3
# Para PostgreSQL: DATABASE_URL=postgres://user:password@localhost:5432/eear_db

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@eearprep.com
CONTACT_EMAIL=contato@eearprep.com

# Email SMTP (para produção)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Settings (produção)
SECURE_SSL_REDIRECT=False
# Para HTTPS em produção: SECURE_SSL_REDIRECT=True

# Media Storage (para produção com AWS S3, etc.)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Cache (opcional)
# REDIS_URL=redis://localhost:6379/1

# Sentry (monitoramento de erros - opcional)
# SENTRY_DSN=your-sentry-dsn-here